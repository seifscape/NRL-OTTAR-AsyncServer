from __future__ import annotations
from typing import Optional, List
from pydantic import BaseModel
from datetime import datetime
from db.models import CaptureImage

class Image(BaseModel):
    image_id: int
    base64_str: str
    date_created: datetime

    class Config:
        orm_mode = True


class CaptureAlbum(BaseModel):
    album_id: int
    annotation: str
    coordinates: str
    data_created: Optional[datetime] = None
    date_updated: Optional[datetime] = None
    images: [CaptureImage]

    class Config:
        orm_mode = True


class CaptureImageAlbum(BaseModel):
    album_id: int
    image_id: int

    class Config:
        orm_mode = True
